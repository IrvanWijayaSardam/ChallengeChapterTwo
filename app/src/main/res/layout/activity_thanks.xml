<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity_thanks"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintDialogue"
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="600dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="@id/constraintDialogue"
            app:layout_constraintStart_toStartOf="@id/constraintDialogue"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="20dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#D1CACA">



            <androidx.cardview.widget.CardView
                android:layout_width="270dp"
                android:layout_height="450dp"
                app:cardElevation="20dp"
                app:cardCornerRadius="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="90dp">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:src="@drawable/check"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terimakasih Telah Memberikan TIps"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="85dp"
                    />

                <ImageView
                    android:layout_marginTop="100dp"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:src="@drawable/goodbye"
                    />
                <ImageView
                    android:layout_marginTop="180dp"
                    android:layout_marginLeft="130dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/dollar"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="15dp"
                    android:layout_marginTop="240dp"
                    android:layout_marginLeft="120dp"
                    >
                    <TextView
                        android:id="@+id/tvThanks"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Rp. 25000"
                        android:gravity="center"
                        />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>